<section class="section card grey darken-4">
    <p class="title">Popular Movies</p>
    <div class="list_slider">
        <ul>
            <% for(i=0; i<popular.length; i++) { %>
            <li>
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="https://image.tmdb.org/t/p/w500<%= popular[i].backdrop_path %>">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4"><h6 class="twolines"><%= popular[i].original_title %></h6><i class="material-icons right">more_vert</i></span>
                        <p class="release_date red-text"><%= moment(popular[i].release_date).format("Do MMM YYYY") %></p>
                        <div class="center mgt"><a href="../Dashboard/Movies/<%= popular[i].id %>" class="waves-effect waves-light btn"><i class="material-icons left">receipt</i>Details</a></div>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4"><h6 class="iblock"><%= popular[i].original_title %></h6><i class="material-icons right">close</i></span>
                        <div class="desc">
                            <%= popular[i].overview %>
                        </div>
                    </div>
                </div>
            </li>
            <% } %>
        </ul>
    </div>
</section>

