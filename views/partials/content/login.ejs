<div class="container login_container">
    <div class="row">
        <div class="col m3"></div>
        <div class="col m6">
            <div class="card red darken-3 no_margin login_title">
                <h5 class="no_margin">Login</h5>
            </div>
            <div class="card no_margin login_body">
                <div class="row">
                    <form class="col s12" method="POST" action="/Login">
                        <div class="row no_margin">
                            <div class="input-field col s12">
                                <input id="email" required type="email" name="email" class="validate">
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="password" required type="password" name="password" class="validate">
                                <label for="password">Password</label>
                            </div>
                            <div class="col s12">
                                <p class="red-text"><%= msg %></p>
                                <p class="center">
                                    <input type="submit" class="waves-effect waves-light btn grey darken-4" value="Login"/>
                                    <a href="../Register" class="waves-effect waves-light btn red darken-3">Register</a>
                                </p>
                            </div>
                            <div class="col m12 center mgt">
                                <h6><a href="#">Forgot your password?</a></h6>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col m3"></div>
    </div>
</div>
