<div class="container login_container">
    <div class="row">
        <div class="col m2"></div>
        <div class="col m8">
            <div class="card red darken-3 no_margin login_title">
                <h5 class="no_margin">Register</h5>
            </div>
            <div class="card no_margin login_body">
                <div class="row">
                    <form class="col s12" method="POST" action="/Register/Submit">
                        <div class="row no_margin">
                            <div class="input-field col s6">
                                <input id="full_name" required type="text" name="fname" class="validate">
                                <label for="full_name">Full Name*</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="email" required type="email" name="email" class="validate">
                                <label for="email">Email*</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="password" required type="password" name="password" class="validate">
                                <label for="password">Password*</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="cpassword" required type="password" name="cpassword" class="validate">
                                <label for="cpassword">Confirm Password*</label>
                            </div>
                            <div class="input-field col s6">
                                <select name="gender" required>
                                    <option value="" disabled selected>Choose your option</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                </select>
                                <label>Gender*</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="dob" name="dob" required type="date" class="datepicker">
                                <label for="dob">Date of Birth*</label>
                            </div>
                            <div class="input-field col s12">
                                <textarea id="bio" name="bio" required class="materialize-textarea"></textarea>
                                <label for="bio">About Yourself*</label>
                            </div>
                            <div class="col s12">
                                <p class="right">* marked fields are necessary</p>
                            </div>
                            <div class="col s12">
                                <p class="center">
                                    <input type="submit" class="waves-effect waves-light btn grey darken-4" value="Submit your registration"/>
                                </p>
                                <p class="center">
                                    <input type="reset" value="Clear" class="waves-effect waves-light btn red darken-3"/>
                                </p>
                                <p class="center">
                                    <a class="waves-effect waves-light btn grey darken-3">Already have an account?</a>
                                </p>
                            </div>
                            <div class="col m12 center mgt">
                                <h6><a href="#">Forgot your password?</a></h6>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col m2"></div>
    </div>
</div>
